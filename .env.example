# ================================
# 前端配置
# ================================
# 前端服务端口
WEB_PORT=8520

# 后端服务地址（Next.js 服务端反向代理使用，客户端不可见）
BACKEND_URL=http://localhost:8521

# API 基础地址（客户端可见）- 使用反向代理，无需包含完整URL
# 前端请求会发送到 http://localhost:8520/api/v1/xxx
# Next.js 会自动转发到后端 http://localhost:8521/api/v1/xxx
NEXT_PUBLIC_API_URL=/api/v1

# AI 配置（可选）
OPENAI_API_KEY=your_openai_api_key_here


# ================================
# 后端配置
# ================================
# 服务器配置
PORT=8521
ENV=development
ENCRYPTION_KEY=easyssh-encryption-key-32bytes!!

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=easyssh
DB_PASSWORD=easyssh_dev_password
DB_NAME=easyssh
DB_SSLMODE=disable
DB_DEBUG=true

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 配置
JWT_SECRET=easyssh-secret-change-in-production
JWT_ACCESS_EXPIRE_HOURS=1
JWT_REFRESH_EXPIRE_HOURS=168
